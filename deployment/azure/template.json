{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "tag": {
            "type": "string"
        },
        "publicPort": {
            "type": "string"
        }
    },
    "functions": [],
    "variables": {},
    "resources": [
        {
            "name": "app-container",
            "type": "Microsoft.ContainerInstance/containerGroups",
            "apiVersion": "2018-10-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "containers": [
                    {
                        "name": "app",
                        "properties": {
                            "image": "[concat('sergiuszrokoszdxc/nice_project_nice_project:', parameters('tag'))]",
                            "ports": [
                                {
                                    "port": "[parameters('publicPort')]"
                                }
                            ],
                            "resources": {
                                "requests": {
                                    "cpu": 1,
                                    "memoryInGB": 3
                                }
                            },
                            "environmentVariables": [
                                {
                                    "name": "FLASK_APP",
                                    "value": "nice_project.app:flask_app"
                                },
                                {
                                    "name": "NICE_PROJECT_PORT",
                                    "value": "[parameters('publicPort')]"
                                },
                                {
                                    "name": "FLASK_ENV",
                                    "value": "developement"
                                }
                                
                            ],
                            "command":  [
                                "uwsgi",
                                "wsgi"
                            ]
                        }
                    }
                ],
                "osType": "Linux",
                "restartPolicy": "OnFailure",
                "ipAddress": {
                    "type": "Public",
                    "ports": [
                        {
                            "protocol": "TCP",
                            "port": "[parameters('publicPort')]"
                        }
                    ]
                }
            }
        }
    ],
    "outputs": {}
}
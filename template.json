{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "containerGroups_app_name": {
            "defaultValue": "app",
            "type": "String"
        },
        "containerGroups_server_name": {
            "defaultValue": "server",
            "type": "String"
        },
        "networkProfiles_nice_project_app_networkProfile_name": {
            "defaultValue": "nice-project-app-networkProfile",
            "type": "String"
        },
        "networkProfiles_nice_project_server_networkProfile_name": {
            "defaultValue": "nice-project-server-networkProfile",
            "type": "String"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.ContainerInstance/containerGroups",
            "apiVersion": "2018-10-01",
            "name": "[parameters('containerGroups_ap_name')]",
            "location": "northeurope",
            "properties": {
                "containers": [
                    {
                        "name": "[parameters('containerGroups_ap_name')]",
                        "properties": {
                            "image": "sergiuszrokoszdxc/nice_project_nice_project",
                            "command": [
                                "uwsgi",
                                "wsgi.ini"
                            ],
                            "ports": [
                                {
                                    "protocol": "TCP",
                                    "port": 8000
                                }
                            ],
                            "environmentVariables": [
                                {
                                    "name": "NICE_PROJECT_PORT",
                                    "value": "8000"
                                }
                            ],
                            "resources": {
                                "requests": {
                                    "memoryInGB": 1.5,
                                    "cpu": 1
                                }
                            }
                        }
                    }
                ],
                "restartPolicy": "OnFailure",
                "ipAddress": {
                    "ports": [
                        {
                            "protocol": "TCP",
                            "port": 8000
                        }
                    ],
                    "ip": "40.127.235.228",
                    "type": "Public"
                },
                "osType": "Linux"
            }
        },
        {
            "type": "Microsoft.ContainerInstance/containerGroups",
            "apiVersion": "2018-10-01",
            "name": "[parameters('containerGroups_server_name')]",
            "location": "northeurope",
            "properties": {
                "containers": [
                    {
                        "name": "[parameters('containerGroups_server_name')]",
                        "properties": {
                            "image": "sergiuszrokoszdxc/nice_project_nginx",
                            "ports": [
                                {
                                    "protocol": "TCP",
                                    "port": 80
                                },
                                {
                                    "protocol": "TCP",
                                    "port": 8000
                                }
                            ],
                            "environmentVariables": [
                                {
                                    "name": "NICE_PROJECT_HOST",
                                    "value": "40.127.235.228"
                                },
                                {
                                    "name": "NICE_PROJECT_PORT",
                                    "value": "8000"
                                },
                                {
                                    "name": "NGINX_LISTEN_PORT",
                                    "value": "80"
                                }
                            ],
                            "resources": {
                                "requests": {
                                    "memoryInGB": 1.5,
                                    "cpu": 1
                                }
                            }
                        }
                    }
                ],
                "restartPolicy": "OnFailure",
                "ipAddress": {
                    "ports": [
                        {
                            "protocol": "TCP",
                            "port": 80
                        },
                        {
                            "protocol": "TCP",
                            "port": 8000
                        }
                    ],
                    "ip": "40.127.149.96",
                    "type": "Public"
                },
                "osType": "Linux"
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2020-03-01",
            "name": "[parameters('virtualNetworks_nice_project_vnet_name')]",
            "location": "northeurope",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "10.0.0.0/24"
                    ]
                },
                "subnets": [
                    {
                        "name": "default",
                        "properties": {
                            "addressPrefix": "10.0.0.0/24",
                            "delegations": [
                                {
                                    "name": "ACIDelegationService",
                                    "properties": {
                                        "serviceName": "Microsoft.ContainerInstance/containerGroups"
                                    }
                                }
                            ],
                            "privateEndpointNetworkPolicies": "Enabled",
                            "privateLinkServiceNetworkPolicies": "Enabled"
                        }
                    }
                ],
                "virtualNetworkPeerings": [],
                "enableDdosProtection": false,
                "enableVmProtection": false
            }
        },
        {
            "type": "Microsoft.Network/networkProfiles",
            "apiVersion": "2020-03-01",
            "name": "[parameters('networkProfiles_nice_project_app_networkProfile_name')]",
            "location": "northeurope",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('virtualNetworks_nice_project_vnet_name'), 'default')]"
            ],
            "properties": {
                "containerNetworkInterfaceConfigurations": [
                    {
                        "name": "eth0",
                        "properties": {
                            "ipConfigurations": [
                                {
                                    "name": "ipconfigprofile1",
                                    "properties": {
                                        "subnet": {
                                            "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('virtualNetworks_nice_project_vnet_name'), 'default')]"
                                        }
                                    }
                                }
                            ]
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Network/networkProfiles",
            "apiVersion": "2020-03-01",
            "name": "[parameters('networkProfiles_nice_project_server_networkProfile_name')]",
            "location": "northeurope",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('virtualNetworks_nice_project_vnet_name'), 'default')]"
            ],
            "properties": {
                "containerNetworkInterfaceConfigurations": [
                    {
                        "name": "eth0",
                        "properties": {
                            "ipConfigurations": [
                                {
                                    "name": "ipconfigprofile1",
                                    "properties": {
                                        "subnet": {
                                            "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('virtualNetworks_nice_project_vnet_name'), 'default')]"
                                        }
                                    }
                                }
                            ]
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks/subnets",
            "apiVersion": "2020-03-01",
            "name": "[concat(parameters('virtualNetworks_nice_project_vnet_name'), '/default')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks', parameters('virtualNetworks_nice_project_vnet_name'))]"
            ],
            "properties": {
                "addressPrefix": "10.0.0.0/24",
                "delegations": [
                    {
                        "name": "ACIDelegationService",
                        "properties": {
                            "serviceName": "Microsoft.ContainerInstance/containerGroups"
                        }
                    }
                ],
                "privateEndpointNetworkPolicies": "Enabled",
                "privateLinkServiceNetworkPolicies": "Enabled"
            }
        }
    ]
}